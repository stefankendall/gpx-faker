#!/usr/bin/env node

var program = require('commander');
var route_prompt = require('../commands/route_prompt');

program.version('0.0.0');

program
    .command('prompt')
    .description('interactively build a route')
    .action(route_prompt.run);

program
    .command('google <google maps direction url>')
    .description('parse a google maps direction route and build a gpx from that')
    .action(function () {

    });

program.parse(process.argv);

if (process.argv.length <= 2) {
    route_prompt.run();
}